                        <td class="px-6 py-4">
                            {{this.MaterialObjeto}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.FechaAdquisicion}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.FormaAdquirida}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.AñoPieza}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.EstadoPieza}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.Cantidad}}
                        </td>
                        <td class="px-6 py-4">
                            {{this.Observacion}}
                        </td>
                        <td class="px-2 py-4 space-x-2.5">
                        <button class="eliminar-btn bg-red-600 text-white px-3 py-2 rounded-md hover:bg-red-500"
                        data-numero="{{this.NumeroRegistro}}" data-nombre="{{this.NombrePieza}}" onclick="openConfirmDeleteModal(this)">
